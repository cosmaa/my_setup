#!/bin/bash

set -e

if [[ -z "$1" ]] ; then

  DIRNAME=$(dirname "$0")
  . "${DIRNAME}/helpers/_filesystem_helpers.sh"
  . "${DIRNAME}/helpers/_fzf_helpers.sh"

  verify_fzf_installation

  if [[ -z "$PROJECT" ]]; then
    PROJECT=$(fzf_select_project)
  fi

  ~/otto/tools/ideaIU-2021.3/bin/idea.sh $PROJECT &>/dev/null &
else
  ~/otto/tools/ideaIU-2021.3/bin/idea.sh $1 &>/dev/null &
fi

